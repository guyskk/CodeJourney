html(ng-app='nodeRoom')
    head
        title title
        style.
            * { margin: 0; padding: 0; box-sizing: border-box; }
            body { font: 13px Helvetica, Arial; }
            form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
            form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
            form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
            #messages { list-style-type: none; margin: 0; padding: 0; }
            #messages li { padding: 5px 10px; }
            #messages li:nth-child(odd) { background: #eee; }
    body
        h1 Hall
        div(ng-controller='HallController')
            p {{i}}
            ul#messages
                li(ng-repeat='item in messages track by $index') {{item}}
        div(ng-controller='RoomController')
            // <ul id="messages" ></ul>
        div(ng-controller='MsgController')
            form(action='', x='')
                input#m(autocomplete='off', ng-model='newMsg')
                button(type='button', ng-click='createMsg()') Send
        script(src='/socket.io/socket.io.js')
        script(src='lib/angular.min.js')
        script(src='js/app.js')
        script(src='js/service/socket.service.js')
        script(src='js/controller/hall.controller.js')
        script(src='js/controller/room.controller.js')
        script(src='js/controller/msg.controller.js')
    html
